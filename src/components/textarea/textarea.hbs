<textarea
  {{#if id}}
    id='{{id}}'
  {{/if}}

  class='{{CG_textarea className=className}}'
  placeholder={{placeholder}}
  rows='1'
  autofocus='autofocus'
  autocomplete='off'
  autocapitalize='off'
  name={{name}}
  oninput='this.style.height = "40px";this.style.height = (this.scrollHeight+2)+"px";'
></textarea>
