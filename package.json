{
  "name": "messenger",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "stylelint": "stylelint \"**/*.css\"",
    "format": "npm run prettier:fix && npm run lint:fix && npm run stylelint",

    "dev": "parcel --no-cache index.html",
    "build": "parcel build index.html",
    "serve": "node ./server.js",
    "start": "npm run build && npm run serve",

    "test": "mocha",
    "test:coverage:text": "nyc npm run test",
    "test:coverage:html": "nyc --reporter=html npm run test && open-cli coverage/index.html",

    "tsc": "tsc"
  },
  "engines": {
    "node": ">=12.0"
  },
  "targets": {
    "browserModern": {
      "engines": {
        "browsers": [
          "last 1 Chrome version"
        ]
      }
    }
  },
  "author": "meteorgul@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@parcel/config-default": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "@parcel/transformer-typescript-tsc": "^2.5.0",
    "@parcel/validator-typescript": "^2.5.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chai": "^4.3.6",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "parcel": "^2.5.0",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "parcel-transformer-hbs": "^1.0.4",
    "prettier": "^2.6.2",
    "sass": "^1.50.0",
    "stylelint": "^14.8.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  },
  "staticFiles": {
    "staticPath": "static",
    "staticOutPath": "static"
  },
  "dependencies": {
    "handlebars": "^4.7.7"
  },
  "alias": {
    "src": "./src"
  }
}
