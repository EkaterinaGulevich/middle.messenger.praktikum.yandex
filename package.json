{
  "name": "messenger",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "\n# FORMATTING CODE SCRIPTS:": "",
    "prepare": "husky install",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "stylelint": "stylelint \"**/*.css\"",
    "format": "npm run prettier:fix && npm run lint:fix && npm run stylelint",
    "\n# TESTING CODE SCRIPTS:": "",
    "tsc": "tsc",
    "test": "mocha",
    "test:coverage:text": "nyc npm run test",
    "test:coverage:html": "nyc --reporter=html npm run test && open-cli coverage/index.html",
    "check-and-test-code": "npm run format && npm run tsc",
    "\n# PARCEL SCRIPTS:": "",
    "dev:parcel": "parcel --no-cache index.html",
    "build:parcel": "parcel build index.html",
    "start:parcel": "npm run build:parcel && npm run serve",
    "\n# WEBPACK SCRIPTS:": "",
    "dev:webpack": "webpack serve",
    "build:webpack": "webpack",
    "start:webpack": "npm run build:webpack && npm run serve",
    "\n# EXPRESS:": "",
    "serve": "node ./server.js"
  },
  "lint-staged": {
    "src/*": "npm run format"
  },
  "engines": {
    "node": ">=12.0"
  },
  "targets": {
    "browserModern": {
      "engines": {
        "browsers": [
          "last 1 Chrome version"
        ]
      }
    }
  },
  "author": "meteorgul@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@parcel/config-default": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "@parcel/transformer-typescript-tsc": "^2.5.0",
    "@parcel/validator-typescript": "^2.5.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chai": "^4.3.6",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "handlebars-loader": "^1.7.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "parcel": "^2.5.0",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "parcel-transformer-hbs": "^1.0.4",
    "prettier": "^2.6.2",
    "sass": "^1.54.4",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.8.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0"
  },
  "staticFiles": {
    "staticPath": "static",
    "staticOutPath": "static"
  },
  "dependencies": {
    "handlebars": "^4.7.7"
  },
  "alias": {
    "src": "./src"
  }
}
